{
  "name": "x-company-bio-products-frontend",
  "version": "1.0.0",
  "description": "X Company Bio Products - Frontend Static Site for Vercel Deployment",
  "type": "module",
  "scripts": {
    "dev": "echo 'Static site - use local server for development'",
    "build": "echo 'Static frontend - no build step required'",
    "start": "echo 'Deployed to Vercel - check live URL'",
    "deploy": "vercel --prod",
    "deploy:preview": "vercel",
    "clean": "echo 'No build artifacts to clean'"
  },
  "keywords": [
    "bio-products",
    "frontend",
    "static-site",
    "vercel",
    "ecommerce",
    "organic-products"
  ],
  "author": "X Company",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/x-company/bio-products-frontend"
  },
  "homepage": "https://x-company-bio-products-frontend.vercel.app",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "vercel": "^32.0.0"
  },
  "architecture": {
    "type": "Static Site",
    "deployment": "Vercel",
    "files": {
      "public/index.html": "Landing page with backend configuration",
      "public/admin.html": "Admin interface for product management",
      "public/chat.html": "Customer chat interface with AI assistant"
    },
    "features": [
      "Responsive Design",
      "Multi-language Support (French/Arabic)",
      "Real-time Chat Interface",
      "Backend API Configuration",
      "Mobile-Optimized UI"
    ],
    "backend_integration": {
      "api_url": "https://x-company-bio-products.bcos-assistant.workers.dev",
      "services": [
        "OpenAI GPT Assistant",
        "Google Sheets Database",
        "Product Catalog API",
        "Order Management"
      ]
